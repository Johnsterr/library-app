<%- include('../layout/header.ejs', {title: title}) %>
<%- include('../layout/menu.ejs') %>

<h1><%= title %></h1>
<a class="btn btn-sm btn-primary" href="/create">Добавить книгу</a>

    <% if(books.length) { %>
        <table class="table table-striped table-sm  mt-3">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Заголовок</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
    
                <% books.map((el, idx) => {  %>
                    <tr>
                        <th scope="row"><%= idx +1 %></th>
                        <td><%= el.title %></td>
                        <td class="text-right">
                            <a class="btn btn-sm btn-success" href="/view/<%= el.getId() %>">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-sm btn-primary" href="/update/<%= el.getId() %>">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <form action="/delete/<%= el.getId() %>" method="POST" class="d-inline">
                                <button class="btn btn-sm btn-danger">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
    
            </tbody>
        </table>
    <% } else { %>   
        <h3 class="mt-5">Записей пока нет</h3>
    <% } %>

<%- include('../layout/footer.ejs') %>